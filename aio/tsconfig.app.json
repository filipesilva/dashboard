{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "../src/app/frontend",
    "module": "esnext",
    "target": "es2015",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "../src/app/frontend/**/*.spec.ts"
  ],
  "include": [
    "../src/app/frontend/**/*"
  ],
  "lib": [
    "es2017",
    "dom"
  ],
  "angularCompilerOptions": {
    "enableIvy": true,
  }
}
